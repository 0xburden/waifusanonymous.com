---
let currentYear = new Date().getFullYear();
---

<style lang="scss">
  .footer {
    background-color: var(--color-black);
    color: var(--color-white);
    display: flex;
    font-family: var(--font-2P);
    font-size: 0.75rem;
    width: 100%;

    &--content {
      display: flex;
      align-items: center;
      flex-direction: column;
      justify-content: space-around;
      flex: 1;
      margin: 0 auto;
      min-height: 250px;
      max-width: 36rem;
      padding-top: 2rem;
      padding-bottom: 2rem;

      img {
        border: 2px solid var(--color-white);
        border-radius: 100%;
      }
    }
  }
</style>

<footer class="footer">
  <div class="footer--content">
    <img src="https://pbs.twimg.com/profile_images/1427063598732353539/RGJWk3Dz_400x400.jpg" width="100" height="100" alt="">
    <a href="https://twitter.com/waifusanonymous" rel="noopener noreferrer" target="_blank">@waifusanonymous</a>
    <p>Waifus Anonymous&trade; {currentYear} </p>
  </div>
</footer>
